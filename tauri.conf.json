{
  "build": {
    "beforeDevCommand": "yarn --cwd='./webapp' dev",
    "beforeBuildCommand": "yarn --cwd='./webapp' build",
    "devPath": "http://localhost:1420",
    "distDir": "./webapp/dist"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "Open Streamer Companion",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "systemTray": {
        "iconPath": "icons/128x128.png",
        "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "net.oscproject.desktop",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
